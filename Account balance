#include <stdio.h>

int main() {
    int balance, choice, amount;

    
    scanf("%d", &balance);
    scanf("%d", &choice);

    switch (choice) {
        case 1:
            
            scanf("%d", &amount);
            balance += amount;
            printf("%d\n", balance);
            break;

        case 2:
          
            scanf("%d", &amount);
            if (amount > balance) {
                printf("Insufficient Balance\n");
            } else {
                balance -= amount;
                printf("%d\n", balance);
            }
            break;

        default:
          
            printf("Invalid Input\n");
    }

    return 0;
}
